@{
    ViewData["Title"] = "New Stock";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <img src="/icons/Stock.svg" width="100" height="50" />
                    <h3 class="text-center">Create Stock</h3>
                </div>
                
                <div class="card-body">
                    <form method="post" action="/Stock/SaveStock">
                        <label>Name: </label>
                        <input class="form-control" required name="Name" />
                        <br />

                        <label>Description: </label>
                        <input class="form-control" required name="Description" />
                        <br />

                        <label>Price: </label>
                        <input class="form-control" required name="Price" />
                        <br />

                        <label>Quantity: </label>
                        <input class="form-control" required name="Quantity" />
                        <br />

                        <br />
                        <button class="btn btn-outline-primary float-end" type="submit">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>