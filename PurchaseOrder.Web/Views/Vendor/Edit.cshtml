@model VendorModel

@{
    ViewData["Title"] = "Edit Vendor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Edit Vendor</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="/Vendor/Update/@Model.Id">
                        <label>Name: </label>
                        <input class="form-control" required name="Name" value="@Model.Name" />
                        <br />
                        <label>Contact Name: </label>
                        <input class="form-control" required name="ContactName" value="@Model.ContactName" />
                        <br />
                        <label>Phone: </label>
                        <input class="form-control" name="Phone" value="@Model.Phone" />
                        <br />
                        <label>Email: </label>
                        <input class="form-control" name="Email" value="@Model.Email" />
                        <br />
                        <label>Address: </label>
                        <input type="text" class="form-control" name="Address" value="@Model.Address" />
                        <br />
                        <a class="btn btn-outline-primary float-end" href="/Vendor/Index">Back</a>
                        <button class="btn btn-outline-primary float-end" type="submit">Update</button>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>