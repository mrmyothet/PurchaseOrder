@{
    ViewData["Title"] = "New Vendor";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <img src="/icons/Vendor.svg" width="100" height="50" />
                    <h3 class="text-center">Create Vendor</h3>
                </div>
                
                <div class="card-body">
                    <form method="post" action="/Home/SaveVendor">
                        <label>Name: </label>
                        <input class="form-control" required name="Name" />
                        <br />

                        <label>Contact Name: </label>
                        <input class="form-control" required name="ContactName" />
                        <br />

                        <label>Phone: </label>
                        <input class="form-control" required name="Phone" />
                        <br />

                        <label>Email: </label>
                        <input class="form-control" required name="Email" />
                        <br />

                        <label>Address: </label>
                        <input type="text" class="form-control" required name="Address" />
                        <br />



                        <br />
                        <button class="btn btn-outline-primary float-end" type="submit">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>